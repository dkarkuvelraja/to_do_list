<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TO_DO_LISTS</title>
    <link rel="stylesheet" type="text/css" href="/main.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <div class="container gradient-background">
    <div class="cen-container">
        <h1>TO_DO_LISTS</h1>
        <p><%= Dates %>,<%= day=new Date().getDate() %>/<%= month=new Date().getMonth()+1 %>/<%=  time = new Date().getFullYear(); %></p>
        <div class="row">
    <form action="/add" method="post">        
        <input type="text" name="listtoadd"  id="task" placeholder="Write Task here" required>
        <button id="but" name="butt" type="submit" value="<%= Dates %>">ADD</button>
    </form>        
    </div>
    <div class="row">
    <form action="/edit" method="post">
        <input type="text" name="input" id="Editinput" placeholder="Edit" required>
        <input type="hidden" name="donedon" id="donedon" >
        <button id="but" type="submit" name="value" value="<%= Dates %>">
            Edit
        </button>
    </form>
    </div>
        <ul id="list-container">
            <% lists.forEach(list => { %>
                <li id="list">
                    <form action="/delete" method="post" class="form1">
                        <input type="checkbox" name="check" id="check" onclick="handleClick()" value="<%= list.id %>" required >
                        <div><%= list.name %></div>
                        <button type="submit" name="done" value="<%= Dates %>" ><i class="material-icons">&#xe872;</i></button>
                    </form>
                    <button type="submit" name="donedone" id="editbutton" onclick="handleButton(this)" value="<%= list.name %>">
                        <input id="hiddenId" name="value" value="<%= Dates %>">    
                            &#9998;
                    </button>
                </li>
            <%  }); %>
        </ul>
    </div>
    </div>    
</body>    
<script type="text/javascript">
    function handleClick() {
        const bool=document.getElementById("check").checked;
        if (bool) {
            const listSelected=document.getElementById("list");
            listSelected.style.textDecoration="line-through";
        } else{
            const listSelected=document.getElementById("list");
            listSelected.style.textDecoration="none";
        }
    }
    function handleButton(button) {
            const buttonvalue=button.value;
            // console.log(buttonvalue); (test)

            const output=document.getElementById("Editinput");
            const saveOut=document.getElementById("donedon")

            output.value=buttonvalue;
            saveOut.value=buttonvalue;
            event.preventDefault();
        }
</script>
</html>